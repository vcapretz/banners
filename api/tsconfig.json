{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true
  },
  "include": ["./"]
}
